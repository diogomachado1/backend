{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src/",
    "paths": {
      "@tests/*": ["__tests__/*"],
      "@app/*": ["app/*"],
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@src/*": ["/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  }
}
